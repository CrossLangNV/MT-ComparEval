<html>
<head>
	<title>MT-ComparEval</title>
	<script type="text/javascript" src="../js/jquery.min.js"></script>
	<script type="text/javascript" src="../js/jquery.sort.js"></script>
	<script type="text/javascript" src="../js/control.js"></script>
	<style>
		table#stats {
			width: 950px;
			font-size: 200%;
			border-size: 2px;
			border-collapse: collapse;
			margin-bottom: 20px;
		}
		
		table#stats th, table#stats td {
			width: 50%;
			border-size: 1px;
			text-align: center;		
		}
	
		ul#sentences {
			padding: 0px;
			margin: 0px;
		}
	
		ul#sentences li {
			list-style: none;
			padding: 0px;
			margin: 0px;
		}
		
		ul#sentences table {
			width: 950px;
			border-width: 1px;
			border-collapse: collapse;
			margin-bottom: 5px;
		}
		
		ul#sentences table th {
			width: 200px;
		}
		
		ul#sentences table td.diff-bleu {
			width: 80px;
			font-size: 250%;
			text-align: center;
		}
		
		ul#sentences table td.diff {
			width: 80px;
			text-align:center;
		}
		
		ul#sentences table td.bleu {
			width: 100px;
			text-align:center;
		}
	
	
		ins {
			text-decoration: none;
			display: none;
		}
		
		del {
			text-decoration: none;
		}
		
		
		ul#toolbar {
			position: fixed;
			top: 10px;
			right: 10px;
			width: 250px;
		}
		
		ul#toolbar li {
			list-style: none;
			margin: 2px 0px;		
		}
	</style>
</head>
<body>
	
    <table id="stats" border="1">
        <tr>
            <th>Machine translation 1</th>
            <th>Machine translation 2</th>
        </tr>
        <tr>
            <td>[% GET tst1_bleu %]</td>
            <td>[% GET tst2_bleu %]</td>
        </tr>
    </table>

	<ul id="sentences">
		[% FOREACH sentence IN sentences %]
			<li>
		        <table border="1">
		            <tr class="src">
		                <th>Source text</th>
		                <td colspan="3">[% GET sentence.src %]</td>
		                <td rowspan="4" class="diff-bleu">
		                	[% GET sentence.tst1_bleu - sentence.tst2_bleu %]
		                </td>
		            </tr>
		            <tr class="ref">
		                <th>Reference translation</th>
		                <td colspan="3">[% GET sentence.ref %]</td>
		            </tr>
		            <tr class="tst1">
		                <th>Machine translation 1</th>
		                <td>[% GET sentence.tst1_diff %]</td>
		                <td class="diff">
		                	<a href="#" class="display_diff">display diff</a>
		                </td>
		                <td class="bleu">[% GET sentence.tst1_bleu %]</td>
		            </tr>
		            <tr class="tst2">
		                <th>Machine translation 2</th>
		                <td>[% GET sentence.tst2_diff %]</td>
		                <td class="diff">
		                	<a href="#" class="display_diff">display diff</a>
		                </td>
		                <td class="bleu">[% GET sentence.tst2_bleu %]</td>
		            </tr>
		        </table>
		    </li>
        [% END %]
	</ul>
	
    <ul id="toolbar">
        <li><a href="../index.html">Compute new statistics</a></li>
        <li><a href="#">Display diff for machine translation 1</a></li>
        <li><a href="#">Display diff for machine translation 2</a></li>
        <li>
        	<a href="#" id="sort-control">
        		Sort by DIFF-BLEU <span>DESC</span>
        	</a>
        </li>
    </ul>
</body>
</html>
