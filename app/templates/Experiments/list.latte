<h1>Experiments</h1>

<table>
{foreach $experiments as $experiment}
	<tr class="experiment" data-id="{$experiment['url_key']}">	
		<td class="name">{$experiment['name']}</td>
		<td class="description">{$experiment['description']}</td>
		<td class="tasks"><a href="{plink Tasks:list $experiment['id']}">tasks</a></td>
		<td class="sentences"><a href="{plink Experiments:sentences $experiment['id']}">sentences</a></td>
	</tr>
{/foreach}
</table>
